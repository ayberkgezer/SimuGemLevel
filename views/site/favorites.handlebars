<head>
    <link rel="stylesheet" href="../css/favorites.css">
</head>

<div id="main" class="">
        <div class="main">
            <div class="sidebar blur2">
                <section>
                    <div>
                        <h1 class="heading heading-medium text-center">Gems Search</h1>
                        <div class="search-sidebar">
                            <label for="" class="gem-select">
                                <span class="name">League</span>
                                <select name="" id="League" class="search-select">
                                    <option value="">Sentinel</option>
                                </select>
                            </label>
                            <form action="/favorites/search" method="get">
                                <div class="input-search" style="position: relative;">
                                    <input type="text" id="input" class="" placeholder="Gem Name" aria-autocomplete="" aria-controls="" autocomplete="" value="" name="gems">
                                </div>
                                <div>
                                    <div class="text-center">
                                        <button class="icon-btn add-btn" type="submit" >
                                            <div class="add-icon"></div>
                                            <div class="btn-txt">Add</div>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div>
                            <h4 class=""></h4>
                        </div>
                        <div>
                            <div class="patreon-side">
                                <div>
                                    <button class="patreon-button">Patreon</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <section>
                    <div>

                    </div>
                </section>
            </div>
            <div class="content ">
                <section>
                    <div class="t1 blur2">
                        <div class="item-overwiev">
                            <div class="t2">
                                <div class="">
                                    <h1 style="position:relative">Skill Gems</h1>
                                </div>
                                <div>
                                    <div class="t3">
                                        <table class="table-1">
                                            <thead>
                                                <tr>
                                                    <th class="sortable text-left heading-medium">Name</th>
                                                    <th class="sortable heading-medium">Level</th>
                                                    <th class="sortable heading-medium">Quality</th>
                                                    <th class="sortable heading-medium">Corrupt</th>
                                                    <th class="sortable text-center heading-medium">Value</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr class="t1body">
                                                    {{#each posts}}
                                                 <tr class="t1body">
                                                    <td>
                                                        <div theme="flush">
                                                            <div class="t1body1">
                                                                <div class="t1body2">
                                                                    <img src="{{icon}}" alt="Gems Img">
                                                                </div>
                                                                <a class="t1bodya" href="" aria-label="See more dateils Path Of Exile Wiki">
                                                                    <span id="gemName" class="heading-small">{{name}}</span>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="text-center heading-small">{{gemLevel}}</td>
                                                    <td class="text-center heading-small">{{gemQuality}}</td>
                                                    <td class="text-center heading-small">{{corrupted}}</td> 
                                                    <td class="sorted sorted-desk t1bodyv">
                                                        <span title="Exalted Orb" style="display: grid; grid: 1fr / min-content min-content 1.5rem; grid-gap: 0.5rem; align-items: center; justify-content: end;">
                                                            {{exaltedValue}}
                                                            <img src="https://web.poecdn.com/image/Art/2DItems/Currency/CurrencyAddModToRare.png?scale=1&w=1&h=1" alt="Exalted" title="Exalted Orb" width="47">
                                                        </span>
                                                    </td> 
                                                    <td class="sorted sorted-desk t1bodyv">
                                                        <span title="Chaos Orb" style="display: grid; grid: 1fr / min-content min-content 1.5rem; grid-gap: 0.5rem; align-items: center; justify-content: end;">
                                                            {{chaosValue}}
                                                            <img src="https://web.poecdn.com/image/Art/2DItems/Currency/CurrencyRerollRare.png?scale=1&w=1&h=1" alt="Chaos" title="Chaos Orb" width="47">
                                                        </span>
                                                    </td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
    </div>

<script src="../js/index.js"></script>