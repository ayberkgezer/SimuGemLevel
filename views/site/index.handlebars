<head>
    <link rel="stylesheet" href="../css/index.css">
</head>

<div id="main" class="">
        <div class="main">
            <div class="sidebar blur2">
                <section>
                    <div>
                        <h1 class="heading heading-medium text-center">Gems Search</h1>
                        <div class="search-sidebar">
                            <label for="" class="gem-select">
                                <span class="name">League</span>
                                <select name="" id="League" class="search-select">
                                    <option value="">Sentinel Softcore</option>
                                </select>
                            </label>
                            <div id="searchGem" class="input-search" style="position: relative;">
                                <form action="/search" method="GET">
                                    <input type="text" class="" id="searchBox" placeholder="Filter By Gem Name" value="" name="look" action="">
                                </form>
                            </div>
                            <label for="" class="gem-select">
                                <span class="name">Level</span>
                                <select name="" id="Level" class="search-select">
                                    <option value="">All</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="">4</option>
                                    <option value="">5</option>
                                    <option value="">6</option>
                                    <option value="">7</option>
                                    <option value="">8</option>
                                    <option value="">9</option>
                                    <option value="">10</option>
                                    <option value="">11</option>
                                    <option value="">12</option>
                                    <option value="">13</option>
                                    <option value="">14</option>
                                    <option value="">15</option>
                                    <option value="">16</option>
                                    <option value="">17</option>
                                    <option value="">18</option>
                                    <option value="">19</option>
                                    <option value="">20</option>
                                    <option value="">21</option>
                                </select>
                            </label>
                            <label for="" class="gem-select">
                                <span class="name">Corrupt</span>
                                <select name="corrupt" id="Level" class="search-select">
                                    <option name="corrupt" value="All">All</option>
                                    <option name="corrupt" value="true">true</option>
                                    <option name="corrupt" value=""></option>
                                </select>
                            </label>
                        </div>
                        <div>
                            <h4 class=""></h4>
                        </div>
                        <div>
                            <div class="patreon-side">
                                <div>
                                    <button class="patreon-button">Patreon</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <section>
                    <div>

                    </div>
                </section>
            </div>
            <div class="content ">
                <section>
                    <div class="t1 blur2">
                        <div class="item-overwiev">
                            <div class="t2">
                                <div>
                                    <h1>Skill Gems</h1>
                                </div>
                                <div>
                                    <div class="t3">
                                        <table class="table-1" id="table1">
                                            <thead>
                                                <tr>
                                                    <th class="sortable text-left heading-medium">Name</th>
                                                    <th class="sortable heading-medium">Level</th>
                                                    <th class="sortable heading-medium">Quality</th>
                                                    <th class="sortable heading-medium">Corrupt</th>
                                                    <th class="sortable text-center heading-medium">Value</th>
                                                </tr>
                                            </thead>
                                            <tbody id="tbodyGems" class="tG">
                                                {{#each posts}}
                                                 <tr class="t1body">
                                                    <td>
                                                        <div theme="flush">
                                                            <div class="t1body1">
                                                                <div class="t1body2">
                                                                    <img src="{{icon}}" alt="Gems Img">
                                                                </div>
                                                                <a class="t1bodya" href="" aria-label="See more dateils Path Of Exile Wiki">
                                                                    <span id="gemName" class="heading-small">{{name}}</span>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="text-center heading-small">{{gemLevel}}</td>
                                                    <td class="text-center heading-small">{{gemQuality}}</td>
                                                    <td class="text-center heading-small">{{corrupted}}</td> 
                                                    <td class="sorted sorted-desk t1bodyv">
                                                        <span title="Exalted Orb" style="display: grid; grid: 1fr / min-content min-content 1.5rem; grid-gap: 0.5rem; align-items: center; justify-content: end;">
                                                            {{exaltedValue}}
                                                            <img src="https://web.poecdn.com/image/Art/2DItems/Currency/CurrencyAddModToRare.png?scale=1&w=1&h=1" alt="Exalted" title="Exalted Orb" width="47">
                                                        </span>
                                                    </td> 
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
    </div>