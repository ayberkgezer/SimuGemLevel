<head>
    <link rel="stylesheet" href="../css/favorites.css">
</head>

<div id="main" class="">
        <div class="main">
            <div class="sidebar blur2">
                <section>
                    <div>
                        <h1 class="heading heading-medium text-center">Gems Search</h1>
                        <div class="search-sidebar">
                            <label for="" class="gem-select">
                                <span class="name">League</span>
                                <select name="" id="League" class="search-select">
                                    <option value="">Softcore</option>
                                    <option value="">Hardcore</option>
                                    <option value="">Standart</option>
                                </select>
                            </label>
                            <form action="/gemslevel/search" method="get">
                                <div class="input-search" style="position: relative;">
                                    <input type="text" id="input" class="" placeholder="Gem Name" name="gemslevel">
                                </div>
                                <div>
                                    <div class="text-center">
                                        <button class="icon-btn add-btn" type="submit" >
                                            <div class="add-icon"></div>
                                            <div class="btn-txt">Add</div>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div>
                            <h4 class=""></h4>
                        </div>
                        <div>
                            <div class="patreon-side">
                                <div>
                                    <button class="patreon-button">Patreon</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <section>
                    <div>

                    </div>
                </section>
            </div>
            <div class="content ">
                <section>
                    <div class="t1 blur2">
                        <div class="item-overwiev">
                            <div class="t2">
                                <div class="">
                                    <h1 style="position:relative">Skill Gems</h1>
                                    <div class="entry">
                                        <div class="input-search" style="position: relative;">
                                            <input id="simlevel" type="text" class="" placeholder="Simulacrum Levels...">
                                        </div>
                                        <form autocomplete="off">
                                            <div class="input-search" style="position: relative;">
                                                <input id="gemlevels" class="" type="text" placeholder="Gem Xp...">
                                            </div>
                                        <ul class="list"></ul>
                                        </form>
                                        <div class="input-search" style="position: relative;">
                                            <input id="quantity" type="text" class="" placeholder="Extra Quantity...">
                                        </div>
                                        <div class="simu-button">
                                            <button class="button4 simu select" id="btnC" onclick="simuLevel()">Calculator</button>
                                        </div>
                                        <div class="simu-number">
                                            <div class="simu-img">
                                                <img src="https://web.poecdn.com/gen/image/WzI1LDE0LHsiZiI6IjJESXRlbXMvTWFwcy9EZWxpcml1bUZyYWdtZW50IiwidyI6MSwiaCI6MSwic2NhbGUiOjF9XQ/92fba984ee/DeliriumFragment.png" alt="">
                                            </div>
                                            <a href="" class="simu-number1">
                                                <span>
                                                    Simulacrum Number:
                                                </span>
                                            </a>
                                            <a href="" class="simu-number1">
                                                <span id="result">
                                                    
                                                </span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <div class="t3">
                                        <table class="table-1">
                                            <thead>
                                                <tr>
                                                    <th class="sortable text-left heading-medium">Name</th>
                                                    <th class="sortable heading-medium">Max Level Xp</th>
                                                    <th class="sortable heading-medium">Awakened Max Level XP</th>
                                                    <th class="sortable heading-medium">Corrupt</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each gemxps}}
                                                 <tr class="t1body">
                                                    <td>
                                                        <div theme="flush">
                                                            <div class="t1body1">
                                                                <div class="t1body2">
                                                                    <img src="{{icon}}" alt="Gems Img">
                                                                </div>
                                                                <a class="t1bodya" href="" aria-label="See more dateils Path Of Exile Wiki">
                                                                    <span id="gemName" class="heading-small">{{names}}</span>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="text-center heading-small">{{normalxp}}</td>
                                                    <td class="text-center heading-small">{{awakenedxp}}</td>
                                                    <td class="text-center heading-small"></td> 
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
    </div>

<script type="text/javascript">

function simuLevel(){
    var simuLevel = document.getElementById("simlevel").value
    var gemlevel = document.getElementById("gemlevels").value
    var quan = document.getElementById("quantity").value

    var quan = 1;
        if(simuLevel ==1){
            var tempt = (quan * gemlevel) / 1000
            document.getElementById("result").innerHTML = tempt
        }else if(simuLevel ==2){
            var tempt = (quan * gemlevel) / 2000
            document.getElementById("result").innerHTML = tempt
        }else if(simuLevel ==3){
            var tempt = (quan * gemlevel) / 3000
            document.getElementById("result").innerHTML = tempt
        }else if(simuLevel ==4){
            var tempt = (quan * gemlevel) / 4000
            document.getElementById("result").innerHTML = tempt
        }else if(simuLevel == 5){
            var tempt = (quan * gemlevel) / 5000
            document.getElementById("result").innerHTML = tempt
        }
            
}

</script>